<?xml version="1.0"?>
<psalm
        errorLevel="1"
        resolveFromConfigFile="true"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="https://getpsalm.org/schema/config"
        xsi:schemaLocation="https://getpsalm.org/schema/config vendor/vimeo/psalm/config.xsd"
        findUnusedBaselineEntry="true"
        findUnusedCode="false">

    <projectFiles>
        <directory name="src" />
        <directory name="tests" />
        <ignoreFiles>
            <directory name="vendor" />
        </ignoreFiles>
    </projectFiles>

    <plugins>
        <pluginClass class="Psalm\PhpUnitPlugin\Plugin" />
    </plugins>

    <issueHandlers>
        <MixedArrayOffset>
            <errorLevel type="suppress">
                <file name="src/Transformer/TraversableToArrayAccessTransformer.php" />
            </errorLevel>
        </MixedArrayOffset>
        <MixedAssignment>
            <errorLevel type="suppress">
                <file name="src/Transformer/TraversableToArrayAccessTransformer.php" />
            </errorLevel>
        </MixedAssignment>
        <PossiblyInvalidArgument>
            <errorLevel type="suppress">
                <file name="tests/IntegrationTest/MappingTest.php" />
            </errorLevel>
        </PossiblyInvalidArgument>
        <InvalidReturnStatement>
            <errorLevel type="suppress">
                <file name="src/Context/Context.php" />
            </errorLevel>
        </InvalidReturnStatement>
        <InvalidReturnType>
            <errorLevel type="suppress">
                <file name="src/Context/Context.php" />
            </errorLevel>
        </InvalidReturnType>
        <MissingConstructor>
            <errorLevel type="suppress">
                <file name="tests/Fixtures/AccessMethods/ObjectWithVariousAccessMethods.php" />
            </errorLevel>
        </MissingConstructor>
        <ArgumentTypeCoercion>
            <errorLevel type="suppress">
                <file name="src/DependencyInjection/RekalogikaMapperExtension.php" />
            </errorLevel>
        </ArgumentTypeCoercion>
        <InternalMethod>
            <errorLevel type="suppress">
                <file name="src/Transformer/ObjectToObjectMetadata/ObjectToObjectMetadataFactory.php" />
            </errorLevel>
        </InternalMethod>
        <InternalClass>
            <errorLevel type="suppress">
                <file name="src/Transformer/ObjectToObjectMetadata/ObjectToObjectMetadataFactory.php" />
            </errorLevel>
        </InternalClass>
    </issueHandlers>
</psalm>
